<h1>ユーザー一覧</h1>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Sex</th>
            <th>Age</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(user=> { %>
            <tr>
                <td>
                    <%= user.fullName %>
                </td>
                <td>
                    <%= user.email %>
                </td>
                <td>
                    <%= user.sex %>
                </td>
                <td>
                    <%= user.age %>
                </td>
                <td><a href="<%= `/users/${user._id}/edit` %>">Edit</a></td>
                <td>
                    <a 
                      href="<%= `users/${user._id}/delete?_method=DELETE` %>"
                      onclick="return confirm('本当にこのユーザーを削除しますか？')"
                    >
                      DELETE
                    </a>
                  </td>
            </tr>
            <% }) %>
    </tbody>
</table>